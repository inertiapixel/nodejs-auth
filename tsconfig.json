{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": ".",
    "lib": ["es2022"],
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./src",
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": ["src/**/*"]
}
